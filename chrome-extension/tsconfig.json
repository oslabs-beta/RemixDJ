{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "baseUrl": ".",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*{.ts,.tsx}",
    "build.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}